    "summary": "Visualizes alignments using IGV.js",
    "details": {
      "contactEmail": "ibrahim.x.tanyalcin@gsk.com"
    },
    "categories": [
      "Read Mapping",
      "Reports",
      "RNA-Seq",
      "Annotation"
    ],
    "dxapi": "1.0.0",
    "version": "0.0.4",
    "inputSpec": [
      {
        "name": "bam_files",
        "label": "Bam files",
